/**index.wxss**/

.outbreak-title {
  display: flex;
  height: 100rpx;
  width: 100%;
  /* background-color: yellow; */
  margin-top: 20rpx;
}

.outbreak-title text {
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx
}

.outbreak-title input {
  width: 350rpx;
  height: 70rpx;
  margin: 15rpx 30rpx;
  border-radius: 25rpx;
  padding-left: 30rpx;
  border: black 2rpx solid;
  /* background-color: rebeccapurple; */
}

.outbreak-button {
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 15rpx 30rpx;
  background-color: green;
  text-align: center;
  font-size: 30rpx;
  border-radius: 25rpx;
}

.outbreak-case{
  display: flex;
  margin-top: 40rpx;
}

.outbreak-case text{
  color: red;
}

.outbreak-case-one{
  width: 35%;
  height: 160rpx;
  margin-left: 10%;
  background-color: yellow;
  text-align: center;
  font-size: 36rpx;
  border-radius: 30rpx
}

.outbreak-case-one view{
  margin-top: 20rpx
}

.outbreak-case-tow{
  width: 35%;
  height: 160rpx;
  margin-left: 10%;
  text-align: center;
  font-size: 36rpx;
  border-radius: 30rpx;
  background-color: pink;
}

.outbreak-case-tow view{
  margin-top: 20rpx
}

.outbreak-content{
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}

.outbreak-content-title{
  font-size: 50rpx;
  text-align: center;
  color: fuchsia
}

.outbreak-content-news{
  width: 74%;
  margin: 30rpx 10% 0 10%;
  border-radius: 20rpx;
  padding: 1% 3% 3% 3%;
  background-color: #ececec;
}

.outbreak-news-title{
  font-size: 36rpx;
  text-align: center;
  margin: 30rpx 0;
  color: blue;
}